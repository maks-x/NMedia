<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.AppTheme.PostButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">4dp</item>
        <item name="iconTint">@color/like_button_tint</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Widget.AppTheme.PostButtonStyle.Likes" parent="Widget.AppTheme.PostButtonStyle">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="Widget.AppTheme.PostButtonStyle.Views" parent="Widget.AppTheme.PostButtonStyle">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:clickable">false</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="Widget.AppTheme.PostButtonStyle.AddPost" parent="Widget.AppTheme.PostButtonStyle">
        <item name="iconTint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.AppTheme.PostButtonStyle.CancelEditing" parent="Widget.AppTheme.PostButtonStyle">
        <item name="iconTint">?attr/colorError</item>
    </style>
</resources>